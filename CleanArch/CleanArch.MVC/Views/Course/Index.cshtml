@{
}
@model CleanArch.Application.ViewModel.CourseViewModel


<table class="table table-bordered">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Image</th>
        </tr>

    </thead>
    <tbody>
        @foreach(var course in Model.Courses)
        {
            <tr>
            <td>@course.Name</td>
            <td>@course.Description</td>
            <td><img style="width:100px;height:100px"  src="@course.ImageUrl" /></td>
            </tr>
        }

    </tbody>
</table>